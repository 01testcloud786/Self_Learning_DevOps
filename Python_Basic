# if-else statement

name=input("Enter your name -")
age=input("Enter your age :")

if ( int(age) >= 18 ):
    print("You are an Adult.")
    print(f"Hi {name}! You can vote.")
elif ( int(age) < 18 and int(age) >= 3 ):
    print(f"Hi {name} , You are in school.")
else :
    print(f"Hi {name} , You are a Kid.")

