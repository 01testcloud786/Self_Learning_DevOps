# For Loop
# Printing No. from 1 to 10

for item in range(10):
    print(item + 1)

'''
'''

#list - collection of data types( int, float, bool, str )

# [] bracs are used for list

marks=[95, 98, 97]
print(marks)
print(marks[0])
print(marks[2])
print(marks[-1])
print(marks[-2])
#print(marks[-4])  index out of range error
#print(marks[5])   index out of range error
print(marks[0:2])
print(marks[1:3])

# we can use for loop also on list data type

for score in marks:
    print(score)

# Operation on list

marks.append(99)
print(marks)
marks.insert(0,55)
print(marks)
print(99 in marks)
print(93 in marks)
print(len(marks))

# While loop on lists

i=0
while i < len(marks) :
    print(marks)
    i = i + 1

marks.clear()
print(marks)

'''
'''

# Break and Continue

# break -- name will be printed till shyam only in below case

students=["Dhirendra", "Ram", "Shyam", "Radha", "Radhika", "Kishan"]

for student in students:
    if student == "Radha" :
        break;               # Semicolon is optional in python
    print(student)

# continue -- Only Radhika name will not be printed in below case
for student in students:
    if student == "Radhika" :
        continue;               # Semicolon is optional in python
    print(student)

'''
'''

# Tuple - Immutable

marks=(95, 97, 90, 94, 96, 97, 97)
print(marks.count(97))
print(marks.count(96))
print(marks.index(97))

# Sets
# Stores only unique Value
# No indexing available

marks={95, 97, 90, 94, 96, 97, 97}
print(marks)

for score in marks :
    print(score)

'''
'''
