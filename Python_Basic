# Python Mini Project (Calculator)

a=eval(input("Enter First No. "))
b=eval(input("Enter Second No. "))
opr=input("Select Operator ( + , - , * , / , % )")

if opr == "+" :
    result=( a + b )
elif opr == "-" :
    result=( a - b )
elif opr == "*" :
    result=( a * b )
elif opr == "/" :
    result=( a / b )
elif opr == "%" :
    result=( a + b )
else :
    print("Invalid Operator")
    result="Undefined"
print(f"The result is {result}")
print("Thanks for using Calculator")

