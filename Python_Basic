# Printing Table

a=input("Enter the No :")
count=1
print(f"Printing the table of {a}")

while count <= 10 :
    print(f"{a} * {count} =", int(a) * count )
    count = count + 1

'''
'''
# No. Multiplied with strings print the string no. of times like concatenation

count=1
while count <= 10 :
    print(count * " *")
    count = count + 1

'''
'''
count=10
while count >= 1 :
    print(count * " *")
    count = count - 1

